{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "baseUrl": "./src/app",
        "lib": [
            "es6",
            "dom",
            "es2017"
        ],
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts",
        "./typings/**/*.ts"
    ]
}
